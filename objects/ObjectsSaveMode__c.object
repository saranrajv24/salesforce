<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <customSettingsType>Hierarchy</customSettingsType>
    <description>Object Save Mode - control of switching ON/OFF validations, processes, workflows and Trigger logic for given user who will run data fix.</description>
    <enableFeeds>false</enableFeeds>
    <fields>
        <fullName>DisabledValidation__c</fullName>
        <defaultValue>false</defaultValue>
        <description>No validations will be executed when field is set to True</description>
        <externalId>false</externalId>
        <label>Disabled Validation</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>FullLogicDisabled__c</fullName>
        <defaultValue>false</defaultValue>
        <description>No validations, processes, workflows and triggers will be executed when field is set to True</description>
        <externalId>false</externalId>
        <label>Full Logic Disabled</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Safe__c</fullName>
        <defaultValue>false</defaultValue>
        <description>No “dangerous” logic like creating  new tasks, update timelines or sending an email to the user will be disabled</description>
        <externalId>false</externalId>
        <label>Safe</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <label>Objects Save Mode</label>
    <visibility>Public</visibility>
</CustomObject>
